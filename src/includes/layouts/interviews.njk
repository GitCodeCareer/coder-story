{% include "components/head.njk" %}
{% include "components/nav.njk" %}

{% block content %}

    <section>
        <div class="bg-indigo-900 md:overflow-hidden">
            <div class="px-4 py-20 md:py-4">
                <div class="container md:mx-auto">
                    <div class="md:flex md:flex-wrap">
                        <div class="text-center md:text-left md:py-20">

                            <h2 class="text-3xl tracking-tight leading-10 font-extrabold text-indigo-300 sm:text-5xl sm:leading-none md:text-6xl">Explore their <span class="text-white underline">stories</span></h2>
                            <p class="mt-3 text-base text-gray-300 sm:mt-5 sm:text-md  sm:mx-auto md:mt-5 md:text-lg lg:mx-0">Anim aute id magna aliqua ad ad non deserunt sunt. Qui irure qui lorem cupidatat commodo. Elit sunt amet fugiat veniam occaecat fugiat aliqua.</p>

                        </div>
                    </div>
                </div>
            </div>

        </section>

        <section class="container mx-auto">

            <div class="flex flex-wrap">

                {% for interview in collections.interviews
 %}
                    <div class="md:w-1/2 lg:w-1/3 py-4 px-4" >
                        <div class=" ">
					<a href="{{ interview.url }}">
                            <div class="bg-white relative shadow p-2 rounded-lg text-gray-800 hover:shadow-lg">
                                <div class="right-0 mt-4 rounded-l-full absolute text-center font-bold text-xs text-white px-2 py-1 bg-indigo-900">
                                    {{ interview.data.date }}
                                </div>
                                <img src="{{ interview.data.backgroundImage }}" class="h-32 rounded-lg w-full object-cover">
                                <div class="flex justify-center">
                                    <img src="{{ interview.data.profileImage }}" class="rounded-full -mt-6 border-4 object-center object-cover border-white mr-2 h-16 w-16">
                                </div>
                                <div class="py-2 px-2">
                                    <div class=" font-bold font-title text-center">
                                        {{ interview.data.title }}
                                    </div>

                                    <div class="text-sm font-light text-center my-2">{{ interview.data.description }}</div>
                                </div>
                            </div>
                        </a>

                    </div>
                </div>
            {% endfor %}

        </div>

    </div>

</section>
{% endblock %}